            "name": "Local authority",
            "description": "Local authority responsible for the library service",
            "type": "string",
            "format": "default",
            "constraints": {
                "required": true
            }
        },
        {
            "name": "Library name",
            "description": "Full public name by which the library is known",
            "type": "string",
            "format": "default",
            "constraints": {
                "required": true
            }
        },
        {
            "name": "Address 1",
            "description": "Address line 1",
            "type": "string",
